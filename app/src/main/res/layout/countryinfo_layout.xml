<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/countryInfo_flag"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:contentDescription="bebra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:padding="4dp"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:id="@+id/countryInfo_charCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="АББРЕВИАТУРА"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/countryInfo_flag"
        app:layout_constraintTop_toTopOf="@+id/countryInfo_flag" />

    <TextView
        android:id="@+id/countryInfo_name"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="4dp"
        android:text="СТРАНА"
        app:layout_constraintBottom_toBottomOf="@+id/countryInfo_flag"
        app:layout_constraintLeft_toLeftOf="@id/countryInfo_charCode"
        app:layout_constraintTop_toBottomOf="@id/countryInfo_charCode"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/favourite_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/heart_off"
        android:scaleType="fitCenter"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>