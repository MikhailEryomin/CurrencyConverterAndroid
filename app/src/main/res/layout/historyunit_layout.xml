<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/h_from_flagView"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@drawable/uk" />

            <TextView
                android:id="@+id/h_from_charCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"

                android:text="USD"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/h_from_value"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="20000"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/rightarrow"
        android:scaleType="fitCenter"
        android:layout_weight="1.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/h_to_flagView"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@drawable/uk" />

            <TextView
                android:id="@+id/h_to_charCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"

                android:text="USD"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

        </LinearLayout>


        <TextView
            android:id="@+id/h_to_value"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="333333333sadasasdsd"
            android:textSize="20sp" />

    </LinearLayout>



</LinearLayout>